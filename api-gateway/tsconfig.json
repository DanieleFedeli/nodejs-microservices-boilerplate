{
	"compilerOptions": {
		"target": "es6",
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types",
			"@types"
		],
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			]
		},
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}